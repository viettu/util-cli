{
  "name": "util-cli",
  "version": "1.0.0",
  "description": "VietTu's utilities in commandlines",
  "main": "index.js",
  "bin": {
    "util-cli": "./index.js"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "tsc": "tsc --build",
    "build": "ncc build src/index.ts -o dist/util-cli/ && cp package.json dist/util-cli/",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "pretty-quick --staged",
    "format:all": "prettier --write ./src",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "keywords": [
    "VietTu",
    "Utilities"
  ],
  "author": "Viet Tu",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.2.3",
    "chalk": "^4.1.2",
    "clipboardy": "^2.3.0",
    "commander": "^9.0.0",
    "execa": "^5.1.1",
    "inversify": "^6.0.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^14.18.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vercel/ncc": "^0.24.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.0",
    "prettier": "^2.8.3",
    "prettier-quick": "0.0.5",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.5"
  }
}
